<% provide :title, "Login" %>

<h1><%= content_for :title %></h1>

<%= render "shared/error_msg" %>

<%= form_with url: login_path, method: :post do | f | %>
  <%= f.hidden_field :continue, value: params[ :continue ] %>
  <div>
    <%= f.label :username %>
    <%= f.text_field :username, @error_status %>
    <br />
    <%= f.label :password %>
    <%= f.password_field :password, @error_status %>
    <br />
    <%= f.submit "Submit" %>
  </div>
<% end %>